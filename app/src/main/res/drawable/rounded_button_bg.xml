<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Цвет фона кнопки -->
    <solid android:color="@color/bright_pink_medium" />

    <!-- Скруглённые углы -->
    <corners android:radius="16dp" />

    <!-- Отступ внутри формы -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- Обводка кнопки -->
    <stroke
        android:width="10dp"
        android:color="@color/bright_yellow"/>
</shape>
