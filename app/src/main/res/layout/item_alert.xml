<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:elevation="2dp">

    <!-- Название предупреждения -->
    <TextView
        android:id="@+id/alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flood Warning"
        android:textSize="18sp"
        android:textColor="@color/bright_purple_medium"
        android:textStyle="bold"/>

    <!-- Серьезность предупреждения -->
    <TextView
        android:id="@+id/alert_severity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Серьёзность: Moderate"
        android:textSize="16sp"
        android:textColor="@color/text_bright"
        android:layout_marginTop="4dp"/>

    <!-- Затронутые регионы -->
    <TextView
        android:id="@+id/alert_regions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calhoun; Lexington; Richland"
        android:textSize="16sp"
        android:textColor="@color/text_bright"
        android:layout_marginTop="4dp"/>

    <!-- Время действия предупреждения -->
    <TextView
        android:id="@+id/alert_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="С 05.01.2025 21:47 по 07.01.2025"
        android:textSize="16sp"
        android:textColor="@color/text_bright"
        android:layout_marginTop="4dp"/>

    <!-- Кнопка "Подробнее" -->
    <TextView
        android:id="@+id/alert_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подробнее ▸"
        android:textSize="16sp"
        android:textColor="@color/bright_purple_medium"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>
</LinearLayout>
