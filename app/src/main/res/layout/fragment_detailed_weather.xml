    <!-- Дополнительная информация (ветер, влажность, давление) -->
    <LinearLayout
        android:id="@+id/additional_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/city_info"
        android:padding="16dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/wind_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ветер"
                android:textSize="18sp"
                android:textColor="@color/text_bright"
                android:fontFamily="@font/greatvibesregular"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/wind_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.2 км/ч, S"
                android:fontFamily="@font/greatvibesregular"
                android:textSize="18sp"
                android:textColor="@color/text_bright"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/humidity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Влажность"
                android:textSize="18sp"
                android:textColor="@color/text_bright"
                android:fontFamily="@font/greatvibesregular"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/humidity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="87%"
                android:textSize="18sp"
                android:fontFamily="@font/greatvibesregular"
                android:textColor="@color/text_bright"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/pressure_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Давление"
                android:textSize="18sp"
                android:textColor="@color/text_bright"
                android:fontFamily="@font/greatvibesregular"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pressure_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1015 hPa"
                android:textSize="18sp"
                android:fontFamily="@font/greatvibesregular"
                android:textColor="@color/text_bright"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Видимость, УФ-индекс, Осадки -->
    <LinearLayout
        android:id="@+id/additional_visibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/additional_info"
        android:padding="16dp"
        android:elevation="4dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/visibility_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Видимость"
            android:textSize="18sp"
            android:textColor="@color/text_bright"
            android:fontFamily="@font/greatvibesregular"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/visibility_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 км"
            android:textSize="18sp"
            android:textColor="@color/text_bright"
            android:fontFamily="@font/greatvibesregular"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/feels_like_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ощущается как"
            android:textSize="18sp"
            android:textColor="@color/text_bright"
            android:fontFamily="@font/greatvibesregular"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/feels_like_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5°C"
            android:textSize="18sp"
            android:textColor="@color/text_bright"
            android:fontFamily="@font/greatvibesregular"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/precipitation_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Осадки"
            android:textSize="18sp"
            android:textColor="@color/text_bright"
            android:fontFamily="@font/greatvibesregular"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/precipitation_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 мм"
            android:textSize="18sp"
            android:textColor="@color/text_bright"
            android:fontFamily="@font/greatvibesregular"/>
    </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/additional_uv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/additional_visibility"
        android:padding="16dp"
        android:elevation="4dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/uv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="УФ-индекс"
                android:textSize="18sp"
                android:textColor="@color/text_bright"
                android:fontFamily="@font/greatvibesregular"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/uv_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="18sp"
                android:textColor="@color/text_bright"
                android:fontFamily="@font/greatvibesregular"/>
        </LinearLayout>
    </LinearLayout>

    <!-- График температуры -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/additional_uv"
        android:layout_margin="16dp"
        android:layout_marginTop="142dp"
        android:layout_marginBottom="16dp"
        android:elevation="6dp"
        android:padding="16dp" />
</RelativeLayout>
