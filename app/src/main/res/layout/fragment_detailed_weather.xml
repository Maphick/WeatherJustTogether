<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bright_purple_light"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Фоновое изображение -->
    <ImageView
        android:id="@+id/weather_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.5"
        android:src="@drawable/cloudly" />

    <!-- Верхняя панель -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:elevation="6dp">

        <!-- Кнопка Назад -->
        <FrameLayout
            android:id="@+id/back_button_container"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:elevation="8dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/back"
                android:contentDescription="Назад"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:padding="0dp" />
        </FrameLayout>


        <!-- Заголовок -->
        <TextView
            android:id="@+id/page_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Подробный прогноз"
            android:textSize="42sp"
            android:textColor="@color/text_bright"
            android:fontFamily="@font/greatvibesregular"
            android:textStyle="bold"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3" />
        <!-- Кнопка Настройки -->
        <FrameLayout
            android:id="@+id/settings_button_container"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/page_name"
            android:elevation="8dp">

            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/settings"
                android:contentDescription="Настройки"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:padding="8dp" />
        </FrameLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/city_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingStart="16dp">
        <!-- Название города -->
        <TextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="0.dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/greatvibesregular"
            android:text=""
            android:textColor="@color/bright_purple_dark"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Дополнительная информация (ветер, влажность, давление) -->
    <LinearLayout
        android:id="@+id/additional_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/city_info"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wind_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/greatvibesregular"
                android:text="Ветер"
                android:textColor="@color/text_bright"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wind_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/greatvibesregular"
                android:text="7.2 км/ч, S"
                android:textColor="@color/text_bright"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/humidity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/greatvibesregular"
                android:text="Влажность"
                android:textColor="@color/text_bright"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/humidity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/greatvibesregular"
                android:text="87%"
                android:textColor="@color/text_bright"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pressure_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/greatvibesregular"
                android:text="Давление"
                android:textColor="@color/text_bright"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pressure_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/greatvibesregular"
                android:text="1015 hPa"
                android:textColor="@color/text_bright"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Видимость, УФ-индекс, Осадки -->
    <LinearLayout
        android:id="@+id/additional_visibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/additional_info"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/visibility_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/greatvibesregular"
                android:text="Видимость"
                android:textColor="@color/text_bright"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/visibility_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/greatvibesregular"
                android:text="10 км"
                android:textColor="@color/text_bright"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/feels_like_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/greatvibesregular"
                android:text="Ощущается как"
                android:textColor="@color/text_bright"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feels_like_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/greatvibesregular"
                android:text="5°C"
                android:textColor="@color/text_bright"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/precipitation_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/greatvibesregular"
                android:text="Осадки"
                android:textColor="@color/text_bright"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/precipitation_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/greatvibesregular"
                android:text="2 мм"
                android:textColor="@color/text_bright"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/additional_uv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/additional_visibility"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/uv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/greatvibesregular"
                android:text="УФ-индекс"
                android:textColor="@color/text_bright"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/uv_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/greatvibesregular"
                android:text="5"
                android:textColor="@color/text_bright"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- График температуры -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/additional_uv"
        android:layout_margin="16dp"
        android:layout_marginTop="142dp"
        android:layout_marginBottom="16dp"
        android:elevation="6dp"
        android:padding="16dp" />
</RelativeLayout>
