<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground">

    <!-- Фоновое изображение -->
    <ImageView
        android:id="@+id/settings_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.5"
        android:src="@drawable/cloudly" />

    <!-- Верхняя панель -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:elevation="6dp">

        <!-- Кнопка Назад -->
        <FrameLayout
            android:id="@+id/back_button_container"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:elevation="8dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/back"
                android:contentDescription="Назад"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:padding="0dp" />
        </FrameLayout>

        <!-- Заголовок -->
        <TextView
            android:id="@+id/page_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Настройки"
            android:textSize="42sp"
            android:textColor="?attr/colorOnBackground"
            android:fontFamily="@font/greatvibesregular"
            android:textStyle="bold"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3" />
    </RelativeLayout>

    <!-- Содержимое настроек -->
    <ScrollView
        android:id="@+id/settings_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Температура -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Температура"
                android:textSize="18sp"
                android:textColor="?attr/colorOnBackground"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_transparent_bg"
                android:popupBackground="@drawable/spinner_popup_background"
                android:padding="12dp"
                android:elevation="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <!-- Скорость ветра -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Скорость ветра"
                android:textSize="18sp"
                android:textColor="?attr/colorOnBackground"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_wind_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_transparent_bg"
                android:popupBackground="@drawable/spinner_popup_background"
                android:padding="12dp"
                android:elevation="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <!-- Давление -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Давление"
                android:textSize="18sp"
                android:textColor="?attr/colorOnBackground"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_pressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_transparent_bg"
                android:popupBackground="@drawable/spinner_popup_background"
                android:padding="12dp"
                android:elevation="8dp"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <!-- Тема -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Тема оформления"
                android:textSize="18sp"
                android:textColor="?attr/colorOnBackground"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_transparent_bg"
                android:popupBackground="@drawable/spinner_popup_background"
                android:padding="12dp"
                android:elevation="8dp"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
