<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:elevation="2dp"
    android:background="@drawable/rounded_transparent_bg">

    <!-- Верхняя часть с данными -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <!-- Время -->
    <TextView
        android:id="@+id/hourly_time"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="01:00"
        android:textSize="18sp"
        android:textColor="?attr/colorOnBackground"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"/>

    <!-- Температура -->
    <TextView
        android:id="@+id/hourly_temp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="15°C"
        android:textSize="18sp"
        android:textColor="?attr/colorOnSecondary"
        android:layout_marginStart="8dp"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"/>

    <!-- Иконка погоды -->
    <ImageView
        android:id="@+id/hourly_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_cloudly"
        app:tint="@color/weather_icon_color"
        android:layout_gravity="center_vertical"/>

    <!-- Параметры погоды -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <!-- Влажность -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hourly_humidity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Влажность:"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSecondary" />

            <TextView
                android:id="@+id/hourly_humidity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80%"
                android:textSize="16sp"
                android:textColor="@color/bright_pink_light"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Вероятность дождя -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/hourly_rain_chance_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дождь:"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSecondary" />

            <TextView
                android:id="@+id/hourly_rain_chance_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40%"
                android:textSize="16sp"
                android:textColor="@color/bright_pink_light"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

    <!-- Описание погоды — ВНИЗУ -->
    <TextView
        android:id="@+id/hourly_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Пасмурно"
        android:textSize="14sp"
        android:textColor="?attr/colorSurface"
        android:textStyle="bold"
        android:gravity="start"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"/>
</LinearLayout>