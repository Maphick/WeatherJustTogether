<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_transparent_bg"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <!-- Иконка погоды -->
    <ImageView
        android:id="@+id/conditionIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:tint="@color/weather_icon_color" />

    <!-- Дата -->
    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/conditionIcon"
        android:layout_marginStart="16dp"
        android:textSize="25sp"
        android:textColor="@color/bright_purple_dark"
        android:fontFamily="@font/greatvibesregular"
        android:textStyle="bold" />

    <!-- Описание погоды (условие) -->
    <TextView
        android:id="@+id/conditionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateText"
        android:layout_toEndOf="@id/conditionIcon"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        android:textColor="@color/bright_purple_light"
        android:fontFamily="@font/greatvibesregular" />

    <!-- Максимальная температура -->
    <TextView
        android:id="@+id/maxTempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:textSize="30sp"
        android:textColor="@color/bright_pink_dark"
        android:fontFamily="@font/greatvibesregular"
        android:textStyle="bold" />

    <!-- Минимальная температура -->
    <TextView
        android:id="@+id/minTempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/maxTempText"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:textSize="22sp"
        android:textColor="@color/bright_purple_dark"
        android:fontFamily="@font/greatvibesregular" />
</RelativeLayout>
