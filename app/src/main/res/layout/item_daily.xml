<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:elevation="2dp">

    <!-- Дата -->
    <TextView
        android:id="@+id/daily_date"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="28 Янв"
        android:textSize="18sp"
        android:textColor="@color/text_bright"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"/>

    <!-- Температура -->
    <TextView
        android:id="@+id/daily_temp"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Макс 25°, Мин 16°"
        android:textSize="18sp"
        android:textColor="@color/text_bright"
        android:layout_marginStart="8dp"
        android:layout_gravity="center_vertical"/>

    <!-- Иконка погоды -->
    <ImageView
        android:id="@+id/daily_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_cloudy"
        app:tint="@color/weather_icon_color"
        android:layout_gravity="center_vertical"/>

    <!-- Дополнительные параметры -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_weight="1">

        <!-- Осадки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/daily_precip_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Осадки:"
                android:textSize="16sp"
                android:textColor="@color/text_bright"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/daily_precip_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30%"
                android:textSize="16sp"
                android:textColor="@color/text_bright"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Ветер -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/daily_wind_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ветер:"
                android:textSize="16sp"
                android:textColor="@color/text_bright"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/daily_wind_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 км/ч"
                android:textSize="16sp"
                android:textColor="@color/text_bright"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
