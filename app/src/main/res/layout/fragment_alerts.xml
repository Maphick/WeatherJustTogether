<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bright_purple_light"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Фоновое изображение -->
    <ImageView
        android:id="@+id/weather_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.5"
        android:src="@drawable/cloudly" />

    <!-- Верхняя панель -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="40dp"
        android:elevation="6dp">

        <TextView
            android:id="@+id/alerts_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Предупреждения"
            android:textSize="34sp"
            android:textColor="@color/bright_pink_dark"
            android:textStyle="bold"
            android:shadowColor="@color/bright_purple_dark"
            android:shadowRadius="3"
            android:shadowDx="1"
            android:shadowDy="1"/>




    <!-- Сообщение "Нет предупреждений" -->
    <TextView
        android:id="@+id/no_alerts_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нет предупреждений"
        android:textSize="18sp"
        android:textColor="@color/text_bright"
        android:layout_below="@id/alerts_title"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>


    <!-- Список предупреждений -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/alertsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/no_alerts_message"
        android:padding="8dp"/>

</RelativeLayout>

</RelativeLayout>

