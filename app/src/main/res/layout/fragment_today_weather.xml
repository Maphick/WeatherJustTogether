<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bright_purple_light"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Фоновое изображение -->
    <ImageView
        android:id="@+id/weather_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.5"
        android:src="@drawable/cloudly" />

    <!-- Верхняя панель -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:elevation="6dp">

        <TextView
            android:id="@+id/page_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Прогноз на сегодня"
            android:textSize="40sp"
            android:textColor="@color/bright_pink_dark"
            android:fontFamily="@font/greatvibesregular"
            android:layout_marginTop="10dp"/>

        <!-- Кнопка настроек -->
        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_settings"
            app:tint="@color/text_bright"/>
    </RelativeLayout>

    <!-- Панель поиска -->
    <RelativeLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_below="@id/top_bar"
        android:elevation="6dp">

        <EditText
            android:id="@+id/search_input"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Введите город"
            android:background="@drawable/search_background"
            android:padding="10dp"
            android:textColor="@color/bright_purple_medium"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/greatvibesregular"/>

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/search_input"
            android:text="🔍"
            android:textSize="32.dp"
            android:background="@android:color/transparent"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <!-- Список предложенных городов (выпадающий список) -->
    <ListView
        android:id="@+id/suggestions_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar"
        android:background="@drawable/rounded_transparent_bg"
        android:visibility="gone"
        android:elevation="8dp"
        android:layout_marginTop="-8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:padding="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
    <LinearLayout
        android:id="@+id/city_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:layout_below="@id/search_bar"
        >
        <!-- Название города -->
        <TextView
            android:id="@+id/city_name"
            android:layout_margin="0.dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="34sp"
            android:textColor="@color/bright_purple_dark"
            android:fontFamily="@font/greatvibesregular"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <!-- Основная информация о погоде -->
    <LinearLayout
        android:id="@+id/weather_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/city_info"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Иконка погоды (СЛЕВА) -->
        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_sunny"
            android:layout_gravity="center_vertical"
            app:tint="@color/bright_yellow" />

        <!-- Температура и состояние погоды -->
        <LinearLayout
            android:id="@+id/weather_info"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/temperature_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7°C"
                android:textSize="44sp"
                android:textColor="@color/bright_pink_medium"
                android:fontFamily="@font/greatvibesregular"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/condition_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mist"
                android:textSize="20sp"
                android:textColor="@color/bright_pink_dark"
                android:fontFamily="@font/greatvibesregular"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Кнопка "Подробнее" -->
    <Button
        android:id="@+id/btnDetails"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_info_container"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="136dp"
        android:layout_marginTop="222dp"
        android:layout_marginEnd="14dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/greatvibesregular"
        android:padding="10dp"
        android:text="Подробнее..."
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>
