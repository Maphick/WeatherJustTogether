<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground">

    <!-- Фоновое изображение -->
    <ImageView
        android:id="@+id/weather_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.5"
        android:src="@drawable/cloudly" />

    <!-- Верхняя панель -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:elevation="0dp">

        <!-- Заголовок -->
        <TextView
            android:id="@+id/page_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Прогноз на сегодня"
            android:textSize="42sp"
            android:textColor="?attr/colorTitle"
            android:fontFamily="@font/greatvibesregular"
            android:textStyle="bold"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3" />

        <!-- Кнопка Настройки -->
        <FrameLayout
            android:id="@+id/settings_button_container"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/page_name"
            android:elevation="8dp">

            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/settings"
                android:contentDescription="Настройки"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:padding="8dp" />
        </FrameLayout>
    </RelativeLayout>

    <!-- Панель поиска -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_below="@id/top_bar"
        android:elevation="6dp">

        <EditText
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Введите город"
            android:background="@drawable/search_background"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:textColor="?attr/colorPrimaryText"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnSearch"
            app:layout_constraintHorizontal_chainStyle="spread" />

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/search"
            android:contentDescription="Поиск"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/search_input"
            app:layout_constraintBottom_toBottomOf="@id/search_input" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Список предложенных городов -->
    <ListView
        android:id="@+id/suggestions_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar"
        android:background="@drawable/rounded_transparent_bg"
        android:visibility="gone"
        android:elevation="8dp"
        android:layout_marginTop="-8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:padding="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <!-- Название города -->
    <LinearLayout
        android:id="@+id/city_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:layout_below="@id/search_bar">

        <TextView
            android:id="@+id/city_name"
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="34sp"
            android:textColor="?attr/colorTitle"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <!-- Основная информация о погоде -->
    <LinearLayout
        android:id="@+id/weather_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/city_info"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Иконка погоды -->
        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_sunny"
            android:layout_gravity="center_vertical"
            app:tint="?attr/colorAccent" />

        <LinearLayout
            android:id="@+id/weather_info"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/temperature_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="7°C"
                android:textColor="?attr/colorAccent"
                android:textSize="44sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/condition_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mist"
                android:textSize="20sp"
                android:textColor="?attr/colorSecondaryText"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="5dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Карта -->
    <LinearLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/weather_info_container"
        android:layout_marginTop="0dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/map_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/suggestions_list"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/map_border">

                <fragment
                    android:id="@+id/map_fragment"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Кнопка "Поделиться" -->
    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        android:elevation="8dp">

        <ImageButton
            android:id="@+id/btnShare"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@drawable/share"
            android:contentDescription="Поделиться"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="8dp" />
    </FrameLayout>

    <!-- Кнопка "Подробнее" -->
    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:elevation="8dp">

        <ImageButton
            android:id="@+id/btnDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@drawable/read_more"
            android:contentDescription="Подробнее"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="8dp" />
    </FrameLayout>

</RelativeLayout>
