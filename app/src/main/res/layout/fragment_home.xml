<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bright_purple_light"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Фоновое изображение -->
    <ImageView
        android:id="@+id/weather_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.5"
        android:src="@drawable/cloudly" />

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:elevation="6dp">

        <TextView
            android:id="@+id/page_name"
            android:layout_margin="0.dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Прогноз на сегодня"
            android:textSize="40sp"
            android:textColor="@color/bright_pink_dark"
            android:fontFamily="@font/greatvibesregular"
            android:layout_marginTop="10dp"/>

        <!-- Кнопка настроек выше поля поиска -->
        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_settings"
            app:tint="@color/text_bright"/>
    </RelativeLayout>

    <!-- Верхняя панель с поиском -->
    <RelativeLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_below="@id/top_bar"
        android:elevation="6dp">

        <EditText
            android:id="@+id/search_input"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Введите город"
            android:background="@drawable/search_background"
            android:padding="10dp"
            android:textColor="@color/bright_purple_medium"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/greatvibesregular"
            />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/search_input"
            android:text="🔍"
            android:textSize="35.dp"
            android:background="@android:color/transparent"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <!-- Список предложенных городов (выпадающий список) -->
    <ListView
        android:id="@+id/suggestions_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar"
        android:background="@drawable/rounded_transparent_bg"
        android:visibility="gone"
        android:elevation="8dp"
        android:layout_marginTop="-8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:padding="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
    <LinearLayout
        android:id="@+id/city_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:layout_below="@id/search_bar"
        >
    <!-- Название города -->
    <TextView
        android:id="@+id/city_name"
        android:layout_margin="0.dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="London"
        android:textSize="34sp"
        android:textColor="@color/bright_purple_dark"
        android:fontFamily="@font/greatvibesregular"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    </LinearLayout>


    <!-- Основная информация о погоде -->
    <LinearLayout
        android:id="@+id/weather_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:layout_below="@id/city_info">

        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_sunny"
            app:tint="@color/bright_yellow" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/temperature_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7°C"
                android:textSize="44sp"
                android:textColor="@color/bright_pink_medium"
                android:fontFamily="@font/greatvibesregular"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/condition_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mist"
                android:textSize="20sp"
                android:textColor="@color/text_bright"
                android:fontFamily="@font/greatvibesregular"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Дополнительная информация (ветер, влажность, давление) -->
    <LinearLayout
        android:id="@+id/additional_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/weather_info"
        android:padding="16dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/wind_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ветер"
                android:textSize="18sp"
                android:textColor="@color/text_bright"
                android:fontFamily="@font/greatvibesregular"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/wind_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.2 км/ч, S"
                android:fontFamily="@font/greatvibesregular"
                android:textSize="18sp"
                android:textColor="@color/text_bright"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/humidity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Влажность"
                android:textSize="18sp"
                android:textColor="@color/text_bright"
                android:fontFamily="@font/greatvibesregular"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/humidity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="87%"
                android:textSize="18sp"
                android:fontFamily="@font/greatvibesregular"
                android:textColor="@color/text_bright"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/pressure_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Давление"
                android:textSize="18sp"
                android:textColor="@color/text_bright"
                android:fontFamily="@font/greatvibesregular"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pressure_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1015 hPa"
                android:textSize="18sp"
                android:fontFamily="@font/greatvibesregular"
                android:textColor="@color/text_bright"/>
        </LinearLayout>
    </LinearLayout>

    <!-- График температуры -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/additional_info"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:elevation="6dp"/>
</RelativeLayout>
